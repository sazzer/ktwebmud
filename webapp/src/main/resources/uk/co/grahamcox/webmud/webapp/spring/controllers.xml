<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:websocket="http://www.springframework.org/schema/websocket"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket.xsd">

    <bean class="uk.co.grahamcox.webmud.webapp.DebugController">
        <constructor-arg name="clock" ref="clock" />
    </bean>

    <bean id="webSocketHandler" class="uk.co.grahamcox.webmud.webapp.websocket.WebSocketHandler" />

    <websocket:handlers allowed-origins="*">
        <websocket:mapping path="/api/websocket" handler="webSocketHandler"/>
    </websocket:handlers>
</beans>